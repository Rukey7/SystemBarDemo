<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dl7.systembartint">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".SecondActivity"
            android:theme="@style/AppTheme.SystemBarOverlay">
        </activity>
        <activity
            android:name=".TestOneActivity"
            android:label="@string/title_activity_test_one"
            android:theme="@style/AppTheme.SystemBarOverlay">
        </activity>
        <activity
            android:name=".TestTwoActivity"
            android:label="@string/title_activity_test_two"
            android:theme="@style/AppTheme.SystemBarOverlay">
        </activity>
    </application>

</manifest>